        $(".btnDetail").click(function () {
            var msgID = $(this).attr("data-messageID");

            $.ajax({
                url: "/Message/GetByID/" + msgID,
                type: "GET",
                dataType: "json",
                contentType: "application/json;charset=utf-8",
                success: function (data) {
                    if (data != null) {
                        $("#nameSurname").html(data.NameSurname);
                        $("#detail").html(data.Detail);
                        $("#createdDate").html(data.CreatedDate)
                    }
                    else {
                        alert("Mesaj bulunamadı");
                    }
                }
            });

