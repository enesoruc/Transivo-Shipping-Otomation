@using Transivo.Model.Models
@model List<Message>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    
    <div class="section__content section__content--p30">
        <section style="width:auto;text-align:center">
            <form method="post">
                <div class="btn-group">
                    <button type="submit" value="1" name="value" class="btn btn-primary">Tüm Zamanlar</button>
                    <button type="submit" value="2" name="value" class="btn btn-primary">Bu Ay</button>
                    <button type="submit" value="3" name="value" class="btn btn-primary">Bu Hafta</button>
                    <button type="submit" value="4" name="value" class="btn btn-primary">Bu Gün</button>
                </div>
            </form>
        </section>
        <br />
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4">
                    <!-- USER DATA-->
                    <div class="user-data m-b-30" style="border-radius:10px">
                        <h3 class="title-3 m-b-30">
                            <i class="zmdi zmdi-comment-text"></i>Mesajlar
                        </h3>
                        <div class="table-responsive table-data">
                            <table class="table table-hover" id="messageTable">
                                <tbody>
                                    @foreach (Message item in Model)
                                    {
                                        <tr class="btnDetail">
                                            <td class="btnDetail">
                                                <div class="table-data__info btnDetail" data-messageID="@item.ID">
                                                    <h6 class="btnDetail" style="color:black" data-messageID="@item.ID">@item.User.FirstName @item.User.LastName</h6>
                                                    <span style="font-size:15px">
                                                        @item.User.EMail
                                                    </span>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        @*<div class="table-responsive table-data">
                            <table class="table table-hover" id="messageTable">
                                <tbody>
                                    <tr>
