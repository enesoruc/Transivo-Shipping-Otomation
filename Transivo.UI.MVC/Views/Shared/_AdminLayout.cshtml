@using Transivo.Model.Models
@{
    Admin admin = Session["admin"] as Admin;
    int counter = 0;
}

<!DOCTYPE html>
<html lang="en">
<head>

    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">

    <!-- Title Page-->
    <title>@admin.Company.CompanyName</title>
    <!-- Fontfaces CSS-->
    <link href="~/assets/css/font-face.css" rel="stylesheet" media="all">
    <link href="~/assets/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <link href="~/assets/vendor/font-awesome-5/css/fontawesome-all.min.css" rel="stylesheet" media="all">
    <link href="~/assets/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">

    <!-- Bootstrap CSS-->
    <link href="~/assets/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" media="all">
    <link href="~/assets/css/form.css" rel="stylesheet" media="all">

    <!-- ~/CoolAdmin-master/vendor CSS-->
    <link href="~/assets/vendor/animsition/animsition.min.css" rel="stylesheet" media="all">
    <link href="~/assets/vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" media="all">
    <link href="~/assets/vendor/wow/animate.css" rel="stylesheet" media="all">
    <link href="~/assets/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" media="all">
    <link href="~/assets/vendor/slick/slick.css" rel="stylesheet" media="all">
    <link href="~/assets/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/assets/vendor/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" media="all">


    <!-- Main CSS-->
    <link href="~/assets/css/theme.css" rel="stylesheet" media="all">
</head>
<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <header class="header-mobile d-block d-lg-none">
            <div class="header-mobile__bar">
                <div class="container-fluid">
                    <div class="header-mobile-inner">
                        <a class="logo" href="index.html">
                            <img src="~/assets/img/Transivo-AdminPanelLogo.png" alt="Transivo Admin Panel" />
                        </a>
                        <button class="hamburger hamburger--slider" type="button">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
        </header>
        <!-- END HEADER MOBILE-->
        <!-- MENU SIDEBAR-->
        <aside class="menu-sidebar d-none d-lg-block">
            <div class="logo">
                <a href="/Admin/AdminHome"> <img src="~/assets/img/Transivo-AdminPanelLogo.png" alt="Admin Panel" /></a>
            </div>
            <div class="menu-sidebar__content js-scrollbar1">
                <nav class="navbar-sidebar">
                    <ul class="list-unstyled navbar__list">
                        <li class="has-sub">
                            <a class="js-arrow" href="#">
                                <i class="zmdi zmdi-shopping-cart"></i>Nakliye Menü
                            </a>
                            <ul class="list-unstyled navbar__sub-list js-sub-list">
                                <li>
                                    <a href="/Shipping/ListShippings">Mevcut Nakliyeleri Görüntüle</a>
                                </li>
                                <li>
                                    <a href="/Shipping/ListWaitOK">Onay Bekleyen Nakliyeler</a>
                                </li>
                            </ul>
                        </li>
                        <li class="has-sub">
                            <a class="js-arrow" href="#">
                                <i class="zmdi zmdi-account-o"></i>Sürücü Menü
                            </a>
                            <ul class="navbar-mobile-sub__list list-unstyled js-sub-list">
                                <li>
                                    <a href="/Driver/ListDrivers">Sürücüleri Görüntüle</a>
                                </li>
                                <li>
                                    <a href="/Driver/DriverRegister">Yeni Sürücü Ekle</a>
                                </li>
                            </ul>
                        </li>
                        <li class="has-sub">
                            <a class="js-arrow" href="#">
                                <i class="fas fa-truck"></i>Araç Menü
                            </a>
                            <ul class="list-unstyled navbar__sub-list js-sub-list">
                                <li>
                                    <a href="/Vehicle/ListVehicles">Araçları Görüntüle</a>
                                </li>
                                <li>
                                    <a href="/Vehicle/VehicleRegister">Yeni Araç Ekle</a>
                                </li>
                            </ul>
                        </li>
                        <li class="has-sub">
                            <a class="js-arrow" href="/Message/ListMessages">
                                <i class="zmdi zmdi-comment-text"></i>Mesajları Görüntüle
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <!-- END MENU SIDEBAR-->
        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <!-- HEADER DESKTOP-->
            <header class="header-desktop">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="header-wrap">
                            <h2>@admin.Company.CompanyName</h2>
                            &nbsp;
                            <div class="header-button">
                                <div class="noti-wrap">
                                    <div class="noti__item js-item-menu">
                                        <i class="zmdi zmdi-comment-more"></i>
                                        <span class="quantity" id="messages">
                                            @foreach (Message item in admin.Company.Messages)
                                            {
                                                if (item.IsActive)
                                                {
                                                    counter++;
                                                }
                                            }
                                            @counter.ToString()
                                        </span>
                                        <div class="mess-dropdown js-dropdown">
                                            @foreach (Message item in admin.Company.Messages)
                                            {
                                                if (item.IsActive)
                                                {
                                                    <div class="mess__item">
                                                        <div class="content" id="messageItemContent">
                                                            <h6>@item.User.FirstName @item.User.LastName</h6>
                                                            <p>@item.CreatedDate.ToShortDateString()</p>
                                                        </div>
                                                    </div>
                                                }
                                            }
                                            <div class="mess__footer">
                                                <a href="#">View all messages</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="noti__item js-item-menu">
                                        <i class="zmdi zmdi-notifications"></i>
                                        <span class="quantity">3</span>
                                        <div class="notifi-dropdown js-dropdown">
                                            <div class="notifi__title">
                                                <p>You have 3 Notifications</p>
                                            </div>
                                            <div class="notifi__item">
                                                <div class="bg-c1 img-cir img-40">
                                                    <i class="zmdi zmdi-email-open"></i>
                                                </div>
                                                <div class="content">
                                                    <p>You got a email notification</p>
                                                    <span class="date">April 12, 2018 06:50</span>
                                                </div>
                                            </div>
                                            <div class="notifi__item">
                                                <div class="bg-c2 img-cir img-40">
                                                    <i class="zmdi zmdi-account-box"></i>
                                                </div>
                                                <div class="content">
                                                    <p>Your account has been blocked</p>
                                                    <span class="date">April 12, 2018 06:50</span>
                                                </div>
                                            </div>
                                            <div class="notifi__item">
                                                <div class="bg-c3 img-cir img-40">
                                                    <i class="zmdi zmdi-file-text"></i>
                                                </div>
                                                <div class="content">
                                                    <p>You got a new file</p>
                                                    <span class="date">April 12, 2018 06:50</span>
                                                </div>
                                            </div>
                                            <div class="notifi__footer">
                                                <a href="#">All notifications</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="account-wrap">
                                    <div class="account-item clearfix js-item-menu">
                                        <div class="image">
                                            <img src="@admin.Company.LogoPath" alt="Logo" />
                                        </div>
                                        <div class="content">
                                            <a class="js-acc-btn" href="#"></a>
                                        </div>
                                        <div class="account-dropdown js-dropdown">
                                            <div class="info clearfix">
                                                <div class="image">
                                                    <a href="#">
                                                        <img src="@admin.Company.LogoPath" />
                                                    </a>
                                                </div>
                                                <div class="content">
                                                    <h5 class="name">
                                                        <a href="#">@admin.Company.CompanyName</a>
                                                    </h5>
                                                    <span class="email">@admin.EMail</span>
                                                </div>
                                            </div>
                                            <div class="account-dropdown__body">
                                                <div class="account-dropdown__item">
                                                    <a href="/AdminAccount/AdminProfileUpdate">
                                                        <i class="zmdi zmdi-account"></i>Hesap Ayarları
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="account-dropdown__footer">
                                                <a href="/AdminAccount/LogOut">
                                                    <i class="zmdi zmdi-power"></i>Güvenli Çıkış
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- HEADER DESKTOP-->
            <!-- HEADER DESKTOP-->
            <!-- MAIN CONTENT-->
            @RenderBody()
            <div class="row">
                <div class="col-md-12">
                    <div class="copyright">
                        <p>
                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script> Tüm Hakları Saklıdır by <a href="http://localhost:50137/" target="_blank">Transivo Company</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Jquery JS-->

    <script src="~/assets/vendor/jquery-3.2.1.min.js"></script>

    <!-- Bootstrap JS-->
    <script src="~/assets/vendor/bootstrap-4.1/popper.min.js"></script>
    <!-- ~/CoolAdmin-master/vendor JS       -->
    <script src="~/assets/vendor/slick/slick.min.js"></script>
    <script src="~/assets/vendor/wow/wow.min.js"></script>
    <script src="~/assets/vendor/animsition/animsition.min.js"></script>
    <script src="~/assets/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>

    <script src="~/assets/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="~/assets/vendor/counter-up/jquery.counterup.min.js"></script>

    <script src="~/assets/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="~/assets/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/assets/vendor/chartjs/Chart.bundle.min.js"></script>


    <script src="~/assets/vendor/select2/select2.min.js"></script>


    <!-- Main JS-->
    <script src="~/assets/js/plugins/main.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
<!-- end document-->
@section scripts{
    <script>
        function logOut() {
            window.location.href = "/Account/AdminLogin";
        }
    </script>
}
