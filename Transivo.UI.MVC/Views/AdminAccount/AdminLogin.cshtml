@using Transivo.UI.MVC.Models
@model LoginViewModel

<!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay" style="background-image:url(../../assets/img/page-title.jpg)">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>GİRİŞ YAP</h2>                   
                    <span class="title-line"><i class="fa fa-car"></i></span>

                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>
<!--== Page Title Area End ==-->
<!--== Login Page Content Start ==-->
<section id="lgoin-page-wrap" class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-12 m-auto" style="margin: 0 auto;">
                <div class="login-page-content">
                    <div class="login-form">
                        <h3>HOŞGELDİNİZ!</h3>
                        <div style="align-content:center">
                            <form class="login_form row" method="post" action="/AdminAccount/AdminLogin" style="margin: 0 auto;">
                                @Html.AntiForgeryToken()
                                <div class="username">
                                    @Html.TextBoxFor(a => a.UserName, new { type = "text", placeholder = "Kullanıcı Adı", @class = "form-control" })
                                    <div class="col-md-10">
                                        @Html.ValidationMessageFor(a => a.UserName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="password">
                                    @Html.TextBoxFor(a => a.Password, new { @class = "form-control ", type = "password", placeholder = "Password" })
                                    <div class="col-md-10">
                                        @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                @if (ViewBag.hata != null)
                                {
                                    <span>@ViewBag.hata</span>
                                }

                                <div class="log-btn">
                                    <button type="submit"><i class="fa fa-sign-in"></i> Giriş Yap</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="create-ac">
                        <p>Üyeliğiniz yok mu? <a href="/AdminAccount/AdminRegister">Kayıt Ol</a></p>
                    </div>
                    <div class="login-menu">
                        <a href="/Home/Index">Anasayfa</a>
                        <span>|</span>
                        <a href="/Home/Contact">İLETİŞİM</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--== Login Page Content End ==-->
