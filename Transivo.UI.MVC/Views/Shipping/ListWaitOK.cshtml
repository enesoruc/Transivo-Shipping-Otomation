@using Transivo.Model.Models
@model List<Shipping>
@{
    ViewBag.Title = "ListWaitOK";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive table--no-card m-b-30">
                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    <th>Nakliye Tarihi</th>
                                    <th>Başlangıç Adresi</th>
                                    <th>Varış Adresi</th>
                                    <th>Tutar</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Shipping item in Model)
                                {
                                    <tr>
                                        <td>@item.RequiredDate.ToShortDateString()</td>
                                        <td>@item.StartAddress.District.City.Name/@item.StartAddress.District.Name</td>
                                        <td>@item.ArrivalAddress.District.City.Name/@item.ArrivalAddress.District.Name</td>
                                        <td>@item.Price ₺</td>
                                        <td>@Html.ActionLink("Onayla", "ShippingDetail", "Shipping", new { id = item.ID }, new { @class = "btn btn-success" })</td>
                                        @*<td><button type="submit" class="btn btn-success btn-sm">Onayla<i class="fa fa-check-square"></i></button></td>*@
                                    </tr>
                                }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>