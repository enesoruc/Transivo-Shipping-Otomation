@using Transivo.Model.Models
@model List<Shipping>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive table--no-card m-b-30">
                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    @*<th>Sipariş Veren</th>*@
                                    <th>Başlangıç Adresi</th>
                                    <th>Varış Adresi</th>
                                    <th>Araç Plaka</th>
                                    <th>Şoför</th>
                                    <th>Şuan Nerede?</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Shipping item in Model)
                                {
                                    <tr>
                                        @*<td>@item.User.FirstName @item.User.LastName</td>*@
                                        <td>@item.StartAddress.District.City.Name / @item.StartAddress.District.Name</td>
                                        <td>@item.ArrivalAddress.District.City.Name / @item.ArrivalAddress.District.Name</td>
                                        <td>@item.Vehicle.Plate</td>
                                        <td>@item.Vehicle.Driver.FirstName @item.Vehicle.Driver.Lastname</td>
                                        <td>1</td>
                                    </tr>
                                }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
