                success: function (resp) {
                    if (resp != null) {
                        $("#arriveCity").empty();
                        $("#arriveCity").append('<option>İl</option>');
                        $.each(resp, function (key, value) {
                            $("#arriveCity").append('<option value=' + value.Value + '>' + value.Text + '</option>');
                        });
                    } else {
                        alert("veri gelmedi");
                    }
                },
                error: function (err) {
                    alert("Bir Hata Oluştu!");
                    console.log(err);
                }
            });
        });

        $("#arriveCity").change(function () {
            var cityID = $("#arriveCity").val();
            $("#ArriveDistrict").append('<option>İlçe</option>');
            $("#ArriveDistrict").empty();

            $.ajax({
                url: "/Location/GetDistrictByCity/" + cityID,
                type: "POST",
                data: { "id": cityID },
                dataType: "json",
                contentType: "application/x-www-form-urlencoded; charset=UTF-8",
                success: function (resp) {
                    if (resp != null) {
                        $("#ArriveDistrict").empty();
                        $("#ArriveDistrict").append('<option>İlçe</option>');
                        $.each(resp, function (key, value) {
                            $("#ArriveDistrict").append('<option value=' + value.Value + '>' + value.Text + '</option>');
                        });
                    } else {
                        alert("veri gelmedi");
                    }
                },
                error: function (err) {
                    alert("Bir Hata Oluştu!");
                    console.log(err);
                }
            });
        });
    </script>
}