@using Transivo.Model.Models
@{List<Company> companies = TempData["Companies"] as List<Company>; }

<!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay" style="background-image:url(../../assets/img/page-title.jpg)">
    <div class="container">
        <div class="row">
            @*Page Title Start --*@
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>İŞ ORTAKLARIMIZ</h2>
                </div>
            </div>
            @*Page Title End*@
        </div>
    </div>
</section>
<!--== Page Title Area End ==
<!--== Car List Area Start ==-->
<section id="car-list-area" class="section-padding">
    <div class="container">
        <div class="row">
            <!-- Car List Content Start -->
            <div class="col-lg-12">
                <div class="car-list-content">
                    <div class="row">
                        @if (companies != null)
