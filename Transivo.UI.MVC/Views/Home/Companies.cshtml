                                        <div class="car-list-info without-bar">
                                            <h2><a href="#">@companies[i].CompanyName</a></h2>
                                            <h8>Km başına taşıma ücreti :</h8>   <h5>@companies[i].Freight ₺</h5>
                                            @Html.ActionLink("Detay", "CompanyDetail", "Home", new { id = companies[i].ID }, new { @class = "rent-btn" })
